{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "rootDir": ".",
    "outDir": "./dist/out-tsc",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2020",
      "dom"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictNullChecks": true,
    "useDefineForClassFields": false,
    "paths": {
      "angular-movies": [
        "projects/movies/src/index.ts"
      ],
      "movies-user-flows": [
        "movies-user-flows/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "angularCompilerOptions": {
    "strictTemplates": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {}
  }
}
