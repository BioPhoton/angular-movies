{
  "database": {
    "rules": "projects/fb-ssr-cloud-fn/database.rules.json"
  },
  "firestore": {
    "rules": "projects/fb-ssr-cloud-fn/firestore.rules",
    "indexes": "projects/fb-ssr-cloud-fn/firestore.indexes.json"
  },
  "hosting": {
    "public": "projects/fb-ssr-cloud-fn/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "projects/fb-ssr-cloud-fn/storage.rules"
  },
  "functions": [
    "predeploy"
    :
    "npm --prefix \"$RESOURCE_DIR\" run build+prerender:prod:ssr-update",
    "source"
    :
    "."
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    },
    "storage": {
      "port": 9199
    },
    "eventarc": {
      "port": 9299
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
