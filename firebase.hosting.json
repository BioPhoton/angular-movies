{
  "emulators": {
    "hosting": {
      "port": 4202
    }
  },
  "hosting": {
    "public": "./dist/projects/movies/browser",
    "cleanUrls": true,
    "trailingSlash": false,
    "ignore": [
      "**/.*/**",
      "**/node_modules/**",
      "**/.DS_Store/**",
      "**/.angular/**",
      "**/.editorconfig/**",
      "**/.eslintrc.json/**",
      "**/.firebase/**",
      "**/.firebaserc/**",
      "**/.git/**",
      "**/.github/**",
      "**/.gitignore/**",
      "**/.husky/**",
      "**/.idea/**",
      "**/.lint-staged.config.js/**",
      "**/.lintstagedrc.json/**",
      "**/.local-config/**",
      "**/.prettierignore/**",
      "**/.prettierrc.json/**",
      "**/.size-limit.js/**",
      "**/.stylelintrc/**",
      "**/.vscode/**",
      "**/.wrangler/**",
      "**/CONTRIBUTING.md/**",
      "**/LICENSE/**",
      "**/README.md/**",
      "**/commitlint.config.js/**",
      "**/database.rules.json/**",
      "**/firebase-debug.log/**",
      "**/firebase.function.json/**",
      "**/firebase.hosting.json/**",
      "**/firebase.json/**",
      "**/jest.config.ts/**",
      "**/jest.preset.js/**",
      "**/migrations.json/**",
      "**/node_modules/**",
      "**/nx.json/**",
      "**/package-lock.json/**",
      "**/package.json/**",
      "**/projects/**",
      "**/tmp/**",
      "**/tooling/**",
      "**/tsconfig.json/**",
      "**/ui-debug.log/**",
      "**/wrangler.toml'"
    ],
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0, no-cache"
          }
        ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31557600"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|ico)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=604800"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "ssr"
      }
    ]
  }
}
