{
  "name": "firebase-function",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "projects/firebase-function/src",
  "projectType": "application",
  "implicitDependencies": [
    "ng-universal-express"
  ],
  "targets": {
    "build": {
      "outputs": [
        "dist/projects/movies/server"
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsc --build projects/firebase-function/tsconfig.function.json"
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "build"
      ],
      "options": {
        "commands": [
          "firebase emulators:start --project angular-movies"
        ],
        "parallel": false
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/dist/coverage/firebase-function"
      ],
      "options": {
        "jestConfig": "projects/firebase-function/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "pre-deploy": {
      "dependsOn": [
        "build"
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx prerender ng-universal-express"
        ],
        "parallel": false
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "pre-deploy"
      ],
      "options": {
        "commands": [
          "npx firebase deploy --project angular-movies"
        ],
        "parallel": false
      }
    },
    "emulate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "firebase emulators:start --project angular-movies"
        ],
        "parallel": false
      }
    },
    "user-flow": {
      "executor": "@push-based/user-flow-nx-plugin:user-flow",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "url": "http://127.0.0.1:5001/angular-movies-a12d3/us-central1/ssr",
        "rcPath": "projects/firebase-function/.user-flowrc.json",
        "outputPath": "dist/user-flow/firebase-function",
        "ufPath": "projects/movies-user-flows/user-flows/navigation.uf.ts",
        "format": [
          "html"
        ]
      },
      "configurations": {
        "emulated": {
          "verbose": true,
          "serveCommand": "nx run firebase-function:emulate",
          "awaitServeStdout": "functions[us-central1-ssr]: http function initialized"
        }
      }
    }
  },
  "tags": []
}
