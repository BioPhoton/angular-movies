{
  "name": "firebase-function",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "projects/firebase-function/src",
  "projectType": "application",
  "implicitDependencies": [
    "ng-universal-express"
  ],
  "targets": {
    "build": {
      "outputs": [
        "dist/projects/movies/server"
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsc --build projects/firebase-function/tsconfig.function.json"
        ],
        "parallel": false
      }
    },
    "emulate-firebase-function": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "firebase emulators:start --only function --project angular-movies"
        ],
        "parallel": false
      }
    },
    "emulate-firebase-all": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "firebase emulators:start --project angular-movies"
        ],
        "parallel": false
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/dist/coverage/firebase-function"
      ],
      "options": {
        "jestConfig": "projects/firebase-function/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "pre-deploy": {
      "dependsOn": [
        "build"
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx prerender ng-universal-express"
        ],
        "parallel": false
      }
    },
    "deploy-firebase-function": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "pre-deploy"
      ],
      "options": {
        "commands": [
          "npx firebase deploy --only function --project angular-movies"
        ],
        "parallel": false
      }
    },
    "deploy-firebase-all": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "pre-deploy"
      ],
      "options": {
        "commands": [
          "npx firebase deploy --project angular-movies"
        ],
        "parallel": false
      }
    }
  },
  "tags": []
}
