{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/out-tsc",
    "declaration": true,
    "types": [
      "node"
    ],
    "resolveJsonModule": true
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/**/*.ts",
    "user-flows/**/*.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
