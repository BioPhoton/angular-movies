{
  "name": "ng-universal-express",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "projects/ng-universal-express/src",
  "projectType": "application",
  "implicitDependencies": [
    "movies"
  ],
  "targets": {
    "build": {
      "outputs": [
        "{options.outputPath}"
      ],
      "executor": "@angular-devkit/build-angular:server",
      "options": {
        "deleteOutputPath": false,
        "outputPath": "dist/projects/movies/server",
        "outputHashing": "media",
        "main": "projects/ng-universal-express/src/main.ts",
        "tsConfig": "projects/ng-universal-express/tsconfig.app.json",
        "inlineStyleLanguage": "scss"
      },
      "configurations": {
        "production": {
          "outputHashing": "media",
          "fileReplacements": [
            {
              "replace": "projects/movies/src/environments/environment.ts",
              "with": "projects/movies/src/environments/environment.prod.ts"
            }
          ]
        },
        "development": {
          "outputHashing": "media",
          "buildOptimizer": false,
          "optimization": false,
          "sourceMap": true,
          "extractLicenses": false,
          "vendorChunk": true
        }
      },
      "defaultConfiguration": "production"
    },
    "build-browser": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run movies:build",
          "nx run movies:generate-routes"
        ],
        "parallel": false
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nguniversal/builders:ssr-dev-server",
      "options": {
      },
      "configurations": {
        "development": {
          "browserTarget": "ng-universal-express:build-browser",
          "serverTarget": "ng-universal-express:build:development"
        },
        "production": {
          "browserTarget": "ng-universal-express:build-browser:production",
          "serverTarget": "ng-universal-express:build:production"
        }
      },
      "defaultConfiguration": "development"
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "projects/ng-universal-express/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/dist/coverage/ng-universal-express"
      ],
      "options": {
        "jestConfig": "projects/ng-universal-express/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "prerender": {
      "executor": "@nguniversal/builders:prerender",
      "options": {
        "routes": [
          "dist/projects/movies/browser"
        ]
      },
      "configurations": {
        "development": {
          "browserTarget": "ng-universal-express:build-browser",
          "serverTarget": "ng-universal-express:build"
        },
        "production": {
          "browserTarget": "ng-universal-express:build-browser",
          "serverTarget": "ng-universal-express:build"
        }
      },
      "defaultConfiguration": "production"
    }
  },
  "tags": []
}
